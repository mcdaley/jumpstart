-# Modal Example used to verify bootstrap JavaScript is setup correctly
-#
%div#exampleModal.modal.fade{ tabindex: "-1", role: "dialog", aria: {labelledby: "exampleModalLabel", hidden: "true" } }
  %div.modal-dialog{ role: "document" }
    %div.modal-content
      %div.modal-header
        %h5#exampleModalLabel.modal-title Modal title
        %button.close{ type: "button",  data: { dismiss: "modal" }, aria: { label: "Close" } }
          %span{ aria: { hidden: "true" } } &times;
      %div.modal-body
        %p Woo Hoo, you just launched a jumpstart modal window
      %div.modal-footer
        %button.btn.btn-secondary{ type: "button", data: { dismiss: "modal" } } Close
        %button.btn.btn-primary{   type: "button", data: { dismiss: "modal" } } Save Changes
  
